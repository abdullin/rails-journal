<div>

<h1>
    <%= @journal.name %>
</h1>


<%= @journal.content %>
<div class="journal_menu control">

  <% if @future_count > 0 %>
    <%= @future_count %> future ·
  <% end %>

    <strong><%= link_to "new", new_journal_note_path(journal_id: @journal.id)%></strong> ·

    <%= link_to "edit", edit_journal_path(@journal) %>
  </div>

</div>



<% @notes.each do | note | %>


  <div class='note-header'>

    <% if !note.timeless? %>
      <strong class="note-title">
        <%= note.created_at.strftime("%A") %>
      </strong>
    <% end %>

    <div class='note-actions control'>
      <strong>

        <% if not note.timeless? %>

        <%= note.created_at.strftime("%b %d") %>
        <% if Date.current.year != note.created_at.year %>
          <%= note.created_at.year %>
        <% end %>
      <% end %>
      </strong>
       · <%= link_to "edit", edit_journal_note_path(id:note.id, journal_id:note.journal.id) %>
    </div>
  </div>
  <div class='note-content'>
    <%= note.content %>
  </div>
<% end %>
