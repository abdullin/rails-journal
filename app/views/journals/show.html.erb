<% content_for :title, @journal.name %>
<h1>
  <%= @journal.name %>
</h1>

<%= @journal.content %>
<div class="journal_menu">

  <% if @future_count > 0 %>
    <%= link_to "#{@future_count} future", future_journal_path(@journal) %> 路
  <% end %>
  <span class="mute">

    <strong><%= link_to "add", new_journal_note_path(journal_id: @journal.id)%></strong> 路
    <%= link_to "shelve", shelve_journal_path(@journal) %> 路
    <%= link_to "edit", edit_journal_path(@journal) %> 
    <% if not @journal.plain? %>
      路 <%= @journal.kind  %>
    <% end %>

  </span>
</div>

<%= render @notes %>
