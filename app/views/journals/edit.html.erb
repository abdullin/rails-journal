<h1>Edit <%=@journal.name %></h1>


<%= form_with model: @journal, url: journal_path(@journal) do |form| %>
  <div class="field">
    <%= form.text_field :name %>
  </div>
  <div class="field">
    <%= form.select :category_id, options_from_collection_for_select(Category.all, :id, :name, @journal.category_id), :prompt => "Select One" %>
  </div>
  <div class="field">
    <%= form.rich_text_area :content %>
  </div>
  <div style="text-align:right">
    <%= form.submit "Update", class: "button" %>
  </div>
<% end %>
