<% content_for :title do "Edit #{@journal.name}" end %>

<h1>
  Edit <%=@journal.name %>
</h1>

<%= form_with model: @journal, url: journal_path(@journal) do |form| %>
  <div class="field">

    <%= form.select :kind, options_for_select([['journal', 'journal'],['person','person']], @journal.kind),{},{ class:"input--select input"} %>
    <%= form.text_field :name, class:"input" %>

    <%= form.select :category_id, options_from_collection_for_select(Category.all, :id, :name, @journal.category_id), {prompt: "Select One"}, { class:"input--select input" } %>
  </div>
  <div class="field">
    <%= form.rich_text_area :content, data: { controller: "mentions", target:"mentions.field"}  %>
  </div>
  <div style="text-align:right">
    <%= form.submit "Update", class: "button" %>
  </div>
<% end %>
