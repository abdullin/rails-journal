<h1>Journals</h1>

<% @groups.each do | category, journals | %>
  <div>
    <strong>
      <%= category.present? ? category.name : "Other" %>
    </strong>
  </div>

  <ul>
    <% journals.each do | journal |%>
      <% coolness_class = "mute" if journal.is_cool? %>
      <% future_class = "journal-future" if  @future.key?(journal.id)  %>
      <li class="<%= coolness_class %> <%= future_class%>">
        <%= link_to journal.name, journal_path(journal) %>
      </li>
    <% end %>
  </ul>
<% end %>
