<h1>Notes#edit</h1>


<%= form_with model: @note, url: journal_note_path(@note, journal_id: @note.journal_id) do |form| %>
  <div class="field">
    <%= form.rich_text_area :content %>

    <%= form.label :created_at %>
    <%= form.date_field :created_at, placeholder: "yyyy-mm-dd" %>
  </div>
  <div style="text-align:right">
    <%= form.submit "Update", class: "button" %>
  </div>
<% end %>
