<div class='note-header'>

  <strong class="note-title">
    <% if note.created_at.between?(7.days.ago,Date.today.end_of_day) %>
      <%= note.created_at.strftime("%A") %>
    <% else %>
      <%= time_ago_in_words(note.created_at) %> ago
    <% end %>
  </strong>

  <div class='note-actions mute'>
    <strong>
      <%= note.created_at.strftime("%b %d") %>
      <% if Date.current.year != note.created_at.year %>
        <%= note.created_at.year %>
      <% end %>
    </strong>
    Â· <%= link_to "edit", edit_journal_note_path(id:note.id, journal_id:note.journal.id) %>
  </div>
</div>
<div class='note-content'>
  <%= note.content %>
</div>
