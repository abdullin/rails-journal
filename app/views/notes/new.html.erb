<h1>
  Add to <%= @journal.name%>
</h1>

<%= form_with model: @note, url: journal_notes_path(journal_id: @journal.id) do |form| %>
  <div class="field">
    <%= form.rich_text_area :content %>
    <%= form.label :created_at %>
    <%= form.date_field :created_at, placeholder: "yyyy-mm-dd" %>
  </div>
  <div style="text-align: right">
    <%= form.submit "Create", class: "button"  %>
  </div>
<% end %>
