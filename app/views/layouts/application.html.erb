<!DOCTYPE html>
<html>
  <head>
    <title>RailsJournal</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
  </head>

  <body>
    <div style="max-width: 40em; margin: 0 auto; position: relative;" id="container">
      <nav style="margin:1em;" id="top-menu" class="mute">
        <%= link_to "Journals", journals_path %> ·
        <%= link_to "Week", review_week_path %> ·
        <%= link_to "Today", review_day_path %> ·
        <%= link_to "Future", review_future_path %>
      </nav>
      <main style="margin: 0 1em 2em 1em;">
        <%= yield %>
      </main>
    </div> 
  </body>
</html>
