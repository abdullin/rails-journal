<h1>Review Week</h1>

<% @notes.group_by{ |n| n.created_at.to_date.cwday }.each do | cwday, notes | %>
  <div style="text-align:right">
    <h2 style="display:inline">  <%= notes.first.created_at.strftime("%A, %B %-d") %> </h2>
  </div>
  <% notes.each do | note | %>

    <div class='note-header'>
      <span class='note-actions'>

        <%= link_to  note.journal.name, edit_journal_note_path(id:note.id, journal_id:note.journal.id) %>

      </span>
    </div>
    <div class='note-content'>
      <%= note.content %>
    </div>
  <% end %>
<% end %>
